        compatible = "zmk,combos";

        c_dw {
            bindings = <&kp LC(DELETE)>;
            key-positions = <39 26>;
            layers = <5>;
            timeout-ms = <500>;
        };

        c_db {
            bindings = <&kp LC(BACKSPACE)>;
            key-positions = <39 53>;
            layers = <5>;
            timeout-ms = <500>;
            require-prior-idle-ms = <0>;
        };

        c_ciw {
            bindings = <&m_del_copy_inner_word>;
            key-positions = <51 32 26>;
            layers = <5>;
        };

        c_viw {
            bindings = <&m_sel_inner_word>;
            key-positions = <32 26 52>;
            layers = <5>;
        };

        c_diw {
            bindings = <&m_del_inner_word>;
            key-positions = <32 39 26>;
            layers = <5>;
        };

        m_yiw {
            bindings = <&m_del_inner_word>;
            key-positions = <32 26 30>;
            layers = <5>;
        };

        c_shift_v {
            bindings = <&m_sel_line>;
            key-positions = <71 52>;
            layers = <5>;
        };

        c_shift_g {
            bindings = <&kp END>;
            key-positions = <71 41>;
            layers = <5>;
        };

        c_ctrl_u {
            bindings = <&kp PAGE_UP>;
            key-positions = <31 76>;
        };

        c_ctrl_d {
            bindings = <&kp PAGE_DOWN>;
            key-positions = <76 39>;
