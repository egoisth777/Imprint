        m_del_copy_inner_word: m_del_copy_inner_word {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&kp LC(LEFT)>,
                <&macro_press>,
                <&kp LEFT_SHIFT>,
                <&macro_tap>,
                <&kp LC(RIGHT_ARROW)>,
                <&macro_release>,
                <&kp LEFT_SHIFT>,
