    behaviors {
        yank: yank {
            compatible = "zmk,behavior-tap-dance";
            label = "YANK";
            #binding-cells = <0>;
            bindings = <&kp LC(C)>, <&m_cpy_line>;
        };

        del_line: del_line {
            compatible = "zmk,behavior-tap-dance";
            label = "DEL_LINE";
            #binding-cells = <0>;
            bindings = <&trans>, <&m_del_line>;
        };

        b_gg: b_gg {
            compatible = "zmk,behavior-tap-dance";
            label = "B_GG";
            #binding-cells = <0>;
            bindings = <&none>, <&kp LC(HOME)>;
        };

        b_shift_caps: b_shift_caps {
            compatible = "zmk,behavior-tap-dance";
            label = "B_SHIFT_CAPS";
            #binding-cells = <0>;
            bindings = <&kp LEFT_SHIFT>, <&kp CAPSLOCK>;
        };
    };

